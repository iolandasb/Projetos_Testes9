<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="tabs">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#223334</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/nunito_sans_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabSelectedTextColor">#223334</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#B7B7A4</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/nunito_sans_light</item>
    </style>

    <style name="MovieTitle">
        <item name="android:textColor">@color/movieTextColor</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PercentText">
        <item name="android:lineHeight" tools:targetApi="p">22dp</item>
        <item name="android:textColor">@color/blue_percent_text</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.Media" parent="">
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>


    <style name="DetailedMovieTitle">
        <item name="android:lineHeight" tools:targetApi="p">40dp</item>
        <item name="android:textColor">@color/movieTextColor</item>
        <item name="android:textFontWeight" tools:targetApi="p">900</item>
        <item name="android:textSize">32dp</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="InfoMovieDetailsText">
        <item name="android:lineHeight" tools:targetApi="p">20dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TitlesInDetailedMovie">
        <item name="android:lineHeight" tools:targetApi="p">28dp</item>
        <item name="android:textColor">@color/movieTextColor</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">45dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">45dp</item>
    </style>

    <style name="LabelRatingCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>

    <style name="SmallRatingText">
        <item name="android:lineHeight" tools:targetApi="p">14dp</item>
        <item name="android:textColor">@color/grey2</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonTry">
        <item name="android:lineHeight" tools:targetApi="p">40dp</item>
        <item name="android:textColor">@color/greenPrimaryColor</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingLeft">@dimen/mtrl_btn_text_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/mtrl_btn_text_btn_padding_right</item>
        <item name="iconTint">@color/white</item>
        <item name="iconPadding">@dimen/mtrl_btn_text_btn_icon_padding</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="StandardTitle">
        <item name="android:lineHeight" tools:targetApi="p">40dp</item>
        <item name="android:textColor">@color/searchColor</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SmallStandardText">
        <item name="android:lineHeight" tools:targetApi="p">24dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="cast">
        <item name="android:textSize">16sp</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ChipColors" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@drawable/chip_color</item>
        <item name="android:textColor">@drawable/chip_color_text</item>
    </style>

    <style name="error">
        <item name="android:text">@string/try_again</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#11C76F</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>